cmake_minimum_required(VERSION 2.8 FATAL_ERROR)
project(motion_tracker)
# Activate this for use with a debugger
# SET(CMAKE_BUILD_TYPE RelWithDebInfo )

find_package(PCL 1.7 REQUIRED)
find_package( OpenCV REQUIRED)
include_directories(${PROJCECT_SOURCE_DIR}/include ${PCL_INCLUDE_DIRS})
link_directories(${PCL_LIBRARY_DIRS})
add_definitions(${PCL_DEFINITIONS})
add_executable (motion_tracker src/main.cpp src/tracker.cpp)
target_link_libraries (motion_tracker ${OpenCV_LIBS} ${PCL_LIBRARIES})

